<?xml version="1.0"?>
 
<configuration>
	<system.web>
		<globalization
			fileEncoding="utf-8"
			requestEncoding="utf-8"
			responseEncoding="utf-8"
		/>

	  <authentication mode="Forms">
	    <forms name="formauth" loginUrl="login.aspx" protection="All" path="/" timeout="30">
	      <credentials passwordFormat="Clear">
	        <user name="fire119" password="#7119" />
	      </credentials>
	    </forms>
	  </authentication>
	  <authorization>
	    <deny users="?" />
	  </authorization>
	</system.web>
	
	<!--iosサブディレクトリへの設定-->
	<location path="ios">
	  <system.web>
	    <authorization>
		  <allow roles="ios"/>
		  <deny users="*"/>
		</authorization>
	  </system.web>
	</location>
	
	<!--androidサブディレクトリへの設定-->
	<location path="android">
	  <system.web>
	    <authorization>
		  <allow roles="android"/>
		  <deny users="*"/>
		</authorization>
	  </system.web>
	</location>
	
	<system.webServer>
	  <staticContent>
	    <mimeMap fileExtension=".json" mimeType="application/json" />
	    <mimeMap fileExtension=".apk" mimeType="application/vnd.android.package-archive" />
	    <mimeMap fileExtension=".ipa" mimeType="application/octet-stream" />
	    <mimeMap fileExtension=".plist" mimeType="text/xml" />
	  </staticContent>
	</system.webServer>
</configuration> 